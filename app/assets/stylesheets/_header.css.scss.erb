//The Header
#crossHeader {
	width: inherit;
	height: 3.375em;
	background-color: rgba(25,25,25,0.9);
}
.downNav {
	background: url(<%= asset_path('downNav.png') %>) no-repeat right top;
	width: 1.1em !important;
	position: absolute !important;
	height: 0.5em !important;
	right: 40%;
	top: 3.6em;
	padding: 0 !important;
}
.leftNav {
	background: url(<%= asset_path('leftNav.png') %>) no-repeat right top;
	position: absolute !important;
	width: 0.5em !important;
	height: 1.8em !important;
	left: 3%;
	top:20%;
	padding: 0 !important;
}
#crossHeaderContainer {
	width: 950px;
	margin: auto;
	height: 100%;
	position: relative;

	img {
		margin: 4px 0em 4px 1em;
		padding: 0 1em;
		float: left;
	}
}
nav.headerNav {
	height: 100%;
	vertical-align: middle;
	font-weight: bold;
	text-shadow: #111 1px 2px 0px;
	color: #EEE;
	line-height: 54px;
	font-size: 12px;
	padding: 0;
	position: relative;

	div {
		height: 100%;
		position: relative;
		float: inherit;
		padding: 0 1em;

		&:hover {
			background-color: rgba(255,255,255,0.1);
		}

		ul{
			position: absolute;
			z-index: 1;
			list-style-type: none;
			width: 100%;
			padding: 0;
			background-color: rgba(25,25,25,0.9);

			li{
				text-align: center;
				height: 2em;
				line-height: 2em;
				font-size: 11px;

				&:hover{
					background-color: rgba(255,255,255,0.1);
				}

				&:nth-child(3){
					border-radius: inherit;
					border-bottom: 0px;
				}
			}
		}
	}

	a {
	 	overflow: auto;
	 	float: inherit;
	}
}
#headQuote {
	margin: 1em 2em;
	color: #eee;
	min-width: 25em;
	max-width: 27.5em;
	font-family: cursive;
	float: left;
	height: 1.4em;
	padding-right: 0.4em;
	line-height: 3.375em;
	background:url(<%= asset_path('headQuote.png') %>) no-repeat;				
}

.dropMenu {
	left: 0em;
	top: 3.5em;
	display: none;
	border-radius: 0 0 0.75em 0;
}
.leftMenu {
	position: absolute !important;
	right: 100%;
	top: 0;
	display:none;
	border-right:1px solid #444;
}
ul.leftMenu {
	border-radius: 0.75em 0 0 0.75em;

	li:last-child {
		border-bottom: 0;
	}
}

ul.dropMenu li, ul.leftMenu li {
	position: relative;
}
nav.headerNav div.promote {
	background-color: rgba(255,255,255,0.2);
}
nav.headerNav div ul.dropMenu > li:last-child{
	border-bottom: 0;
}
nav.headerNav div ul.dropMenu > li:nth-child(1){
	border-top: 1px solid #444;
}

.headerSpacer {
	height: 100%;
	max-width: 1px;
	border-right: 1px solid #444;
	border-left: 1px solid #222;
	margin: 0;
	float: left;
	margin: 0;
	position: relative;
}