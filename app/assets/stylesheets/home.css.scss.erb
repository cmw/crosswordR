#logged-out-welcome-container {
	width: 23.3em;
	height: 26.5em;
	margin: 2em auto;
	background: url(<%= asset_path('chalkboardBlack.png') %>) no-repeat;
	-webkit-box-shadow: 0.5em 0.625em 1.8em rgba(0, 0, 0, 1);
	-moz-box-shadow: 0.5em 0.625em 1.8em rgba(0, 0, 0, 1);
	box-shadow: 0.5em 0.625em 1.8em rgba(0, 0, 0, 1);
	padding-top: 3em;
	color: lightgrey;
	text-align: center;
}
#welcomeBoard {
	margin: 0em auto 2em auto;
	display: block;
	background: url(<%= asset_path('welcomeBoard.png') %>) no-repeat;
	height: 4em;
	width: 11.6em;
}
.chalkboardButton {
	margin: 0em auto 2em auto;
	padding: 0.6em 0;
	color: whitesmoke !important;
	border: 1px outset;
	display: block;
	text-align: center;
	width: 10em;
	background: rgba(255,255,255,0.2);
	font-size: inherit;
	width: 10em;
	font-weight: bold;
	cursor: pointer;
}
.chalkboardInput {
	border-bottom: 1px whitesmoke dotted;
	color: white;
}

.homeFolderItem {
	padding: 0.3em 0.5em;
	position: relative;
	height: 1.2em;
}
.homeFolderItem.published{
	//background-color: rgb(180,255,180);
	background: inherit;
}
.homeFolderItem.unpublished{
	//background-color: rgb(255,255,180);
	background: inherit;
}
.homeFolderItem .homeFolderItemPart {
	display: inline-block;
	overflow: hidden;
	background: inherit;
	position: absolute;
	max-width: 7.7em;
	padding-left: 0.2em;
	padding-right: 0.3em;
	max-height: 1.2em;
	word-break: break-all;
}
span.homeFolderItemPart.dimPart {
	left: 12em;
	width: 2.7em;
	text-align: center;
}
span.homeFolderItemPart.datePart {
	left: 16em;
}

.homeMenu {
	background: rgb(229,222,196);
	width: 53.2em;
	margin: 1.5em auto 0 auto;
	overflow: auto;
	border-radius: 0.2em;
	position: relative;
	min-height: 22em;
}
.homeMenuFold {
	background: rgb(250,245,239);
	margin: 1em 0.5em 1em 0.5em;
	position: relative;
	float: left;
	padding: 0.5em 0.5em 1.4em 0.5em;
	min-height: inherit;
}
.homeMenuFold.sideFold {
	width: 12em;
}
.homeMenuFold.midFold {
	width: 23em;
}
.homeMenu h3 {
	position: relative;
	margin-bottom: 0em;
}
.menuCorner {
	width: 1em;
	height: 1em;
	position: absolute;
	background: rgb(229,222,196);
}
.topLeftMenuCorner {
	top: 0;
	left: 0;
	border-bottom-right-radius: 1em;
}
.topRightMenuCorner {
	top: 0;
	right: 0;
	border-bottom-left-radius: 1em;
}
.bottomLeftMenuCorner {
	bottom: 0;
	left: 0;
	border-top-right-radius: 1em;
}
.bottomRightMenuCorner {
	bottom: 0;
	right: 0;
	border-top-left-radius: 1em;
}
.editView {
	position: relative;
	background: inherit;
	padding: 0 0.3em;
	margin-left: 0.1em;
	font-weight: bold;
}
.menuSection {
	background: inherit;
	max-height: 8em;
	overflow-x: hidden;
	overflow-y: scroll;
	border: 1px solid rgb(250,245,239);
	margin-bottom: 1em;
}
.menuSection:hover {
	border: 1px dashed black;
}
.menuCrease {
	width: 1px;
	min-height: 100%;
	overflow: auto;
	height: 25.5em;
	background: grey;
	float: left;
	margin: 0.2em 0;
}
.menuDots {
	position: absolute;
	top: 0;
	left: 0;
	width: inherit;
	line-height: 1.6em;
	margin-left: 0.8em;
	overflow: hidden;
	max-width: 21em;
}