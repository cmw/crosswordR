.newPuzzleUser {
	margin: 1em auto 0 auto;
	max-width: 15em;
	text-align: center;
	background: url(<%= asset_path('crosswordPaper.jpeg') %>);
	padding: 0.5em 1em;
}
.newPuzzleUser p {
	background: rgba(0,0,0,0.1);
	padding: 0.3em 0.6em;
}
.newPuzzleUserInput {
	color: #333;
}
.newPuzzleUserButton {
	margin: 1em auto 1em auto;
	padding: 0.6em 0;
	border: 1px outset;
	display: block;
	text-align: center;
	width: 10em;
	background: lightgrey;
	font-size: inherit;
	width: 10em;
	font-weight: bold;
	cursor: pointer;
}