<h1>Listing crossword_solutions</h1>

<table>
  <tr>
    <th>Crossword puzzle</th>
    <th>User</th>
    <th>Solution letters</th>
    <th>Solution complete</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @crossword_solutions.each do |crossword_solution| %>
  <tr>
    <td><%= crossword_solution.crossword_puzzle_id %></td>
    <td><%= crossword_solution.user_id %></td>
    <td><%= crossword_solution.solution_letters %></td>
    <td><%= crossword_solution.solution_complete %></td>
    <td><%= link_to 'Show', crossword_solution %></td>
    <td><%= link_to 'Edit', edit_crossword_solution_path(crossword_solution) %></td>
    <td><%= link_to 'Destroy', crossword_solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

