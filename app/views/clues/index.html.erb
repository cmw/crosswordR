<% if current_user && current_user.admin %>
	<h4>Total clues: <%= Clue.count %></h4>

	<h1>Listing clues</h1>
	
	<table>
		<tr>
			<th>Crossword puzzle</th>
		<th>User</th>
			<th>Cell</th>
			<th>Orientation</th>
			<th>Clue text</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	
	<% @clues.each do |clue| %>
		<tr>
			<td><%= clue.crossword_puzzle_id %></td>
			<td><%= clue.user_id %></td>
			<td><%= clue.cell %></td>
			<td><%= clue.orientation %></td>
			<td><%= clue.clue_text %></td>
			<td><%= link_to 'Show', clue %></td>
			<td><%= link_to 'Edit', edit_clue_path(clue) %></td>
			<td><%= link_to 'Destroy', clue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	</table>
	
	<br />
	
	<%= link_to 'New Clue', new_clue_path %>
<% else %>
	<div id="signup-login-container" class="shadow">
		<%= image_tag "/assets/admin_only.png", :alt => "Admin only", :id => "admin-only" %>
		You are not authorized to access this information.
	</div>
<% end %>