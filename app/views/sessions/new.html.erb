<% title "Log In" %>

<% if current_user %>

	<div id="signup-login-container" class="shadow">
		<h1>Goodness Gracious</h1>
		You're already logged in!<br /><br />
		
		<%= link_to "Oh. Right.", root_url %><br />
		<%= link_to "Log me out!", log_out_path %>
	</div<

<% else %>

	<div id="signup-login-container" class="shadow">
		<h1>Log in</h1>
		
		<%= form_tag sessions_path do %>
			<p>
				<%= label_tag :username %><br />
				<%= text_field_tag :username, params[:username] %>
			</p>
			<p>
				<%= label_tag :password %><br />
				<%= password_field_tag :password %>
			</p>
			<p class="button"><%= submit_tag "Let's go!" %></p>
		<% end %>
	</div>
	
<% end %>