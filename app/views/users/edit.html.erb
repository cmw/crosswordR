<% if current_user %> 
	<% if current_user.admin %>
	<h1>Editing user</h1>
	
	<%= render 'form' %>
	
	<%= link_to 'Show', @user %> |
	<%= link_to 'Back', users_path %>
	<% elsif current_user == @user %>
		<%= render 'form' %>
	<% else %>
	
	Sorry, you can't edit other users' profiles
	<% end %>
<% else %>

	<%= render :partial => "partial/admin_only" %>

<% end %>