<!DOCTYPE html>
<html>
<head>
  <title>Crossword Café</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
	<%= javascript_include_tag :application %>
  <%= javascript_include_tag "http://code.jquery.com/ui/1.9.2/jquery-ui.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="crossHeader" class="shadow">
		<div id="crossHeaderContainer" >
			<!-- <img src="http://i.imgur.com/ZQegw.jpg" />
			<img src="http://i.imgur.com/n2q3D.jpg" />
			<img src="http://i.imgur.com/ZY0G7.jpg" />
			<img src="http://i.imgur.com/XIdcI.jpg" />-->
			
			<%= link_to image_tag("/assets/headerIcon.png", :height => "85%", :alt => "Crossword Café -- Home"), root_url %>
			<div id="headQuote">“A writer is someone who can make a riddle out of an answer.”</div>
			<nav class="right headerNav">
				<span class="headerSpacer right"></span>
				<div class ="menuTab">
					My Profile
					<div class="downNav"></div>
					<ul class="dropMenu">
					
						<% if current_user && current_user.admin%>
						<li> Admin
								<div class="leftNav"></div>
								<ul class="leftMenu">
										<%= link_to "<li>All Puzzles</li>".html_safe, crossword_puzzles_path %>
										<%= link_to "<li>All Users</li>".html_safe, users_path %>
										<%= link_to "<li>All Clues</li>".html_safe, clues_path %>
								</ul>
						</li>
						<% end %>
						<% if current_user%>
						<%= link_to "<li>Profile</li>".html_safe, clues_path %>
						<%= link_to "<li>Log Out</li>".html_safe, log_out_path %>
						<% else %>
						<%= link_to "<li>Log In</li>".html_safe, log_in_path %>
						<%= link_to "<li>Sign Up</li>".html_safe, sign_up_path %>
						<% end %> 
					<ul>
				</div>
				<span class="headerSpacer right"></span>
				<div class="menuTab">
					Load Puzzle
					<div class="downNav"></div>
					<ul class="dropMenu">
						<li>Locke
							<div class="leftNav"></div>
							<ul class="leftMenu">
								<li class="pointer" onclick="loadCrossword(locke1);">Interstellar</li>
								<li class="pointer" onclick="loadCrossword(locke2);">Rainbow</li>
							</ul>
						</li>
						<li>O'Shea
						<!-- Leaves out non-creators
						 %User.where('crossword_puzzles_count > ?', 0).order(:last_name).each do |user| %
						<li> %= user.last_name %
							<div class="leftNav"></div>
							<ul class="leftMenu">
							
								% user.crossword_puzzles.each do |crossword_puzzle| %
									<li class="pointer" onclick="loadCrossword(dylan1);"> %= crossword_puzzle.title.split(" ")[0][0,13] % </li>
								% end %
								
							</ul>
						</li>
						% end %
						-->
							<div class="leftNav"></div>
							<ul class="leftMenu">
								<li class="pointer" onclick="loadCrossword(dylan1);">Parisian</li>
								<li class="pointer" onclick="loadCrossword(dylan2);">Hate Crate</li>
							</ul>
 						</li>
					</ul>
					
				</div>
				<span class="headerSpacer right"></span>
					<%= link_to '<div>New Puzzle</div>'.html_safe, new_crossword_puzzle_path %>
				<span class="headerSpacer right"></span>
			</nav>
		</div>
	</div>
	<% if flash[:notice] %>
		<p class="flash-notice shadow top-notice"><%= flash[:notice] %></p>
	<% end %>
<%= yield %>

</body>
</html>
