<%= content_tag_for(:li, sol, :class => 'text-smaller') do %>
	<%= link_to sol.crossword_puzzle.title, crossword_puzzle_path(sol.crossword_puzzle), :class=> "hoverLine"%> - <%= sol.completion_percentage %>%
	<%= link_to 'delete', sol, :method => :delete, :remote => true, data: { confirm: 'Are you sure you want to delete your solution?' } %>
<% end %>